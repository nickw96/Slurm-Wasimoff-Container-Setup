[Unit]
Description=Starting the wasimoff broker
#After=
Before=slurmctld.service

[Service]
ExecStart=/bin/broker
#ExecStop=
#ExecReload=
Type=exec
Restart=on-failure
RestartMode=normal
Environment="WASIMOFF_ALLOWED_ORIGINS=\"*\""
#TODO create .service file during setup script
Environment="WASIMOFF_HTTP_LISTEN=:4080"
KillMode=control-group
KillSignal=SIGTERM

[Install]
WantedBy=default.target
#RequiredBy=slurmctld.service